<div class="container">
  <h1 class="my-4">Badges</h1>

  <div class="row badges-container">
    <% @badges.each do |badge| %>
      <div class="col-6 col-md-3 mb-4">
        <div class="card text-center">
          <%= image_tag badge.image_url, alt: badge.title, class: "lrg-badge-image" if badge.image_url.present? %>
          <div class="card-body">
            <h5 class="card-title"><%= badge.title %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
